#!/bin/sh

if [ "${OSTYPE}" = "cygwin32" -o "${OSTYPE}" = "cygwin" ];
then
  TINYVM_HOME="`dirname $0`/.."
  TINYVM_HOME=`cygpath -w "${TINYVM_HOME}"`
else
  TINYVM_HOME="`dirname $0`/.."
fi

TINYVMOPTIONS="-Dtinyvm.write.order=LE ${TINYVMOPTIONS}"

export TINYVM_HOME
export TINYVMOPTIONS

${TINYVM_HOME}/bin/aux-tvmld $@
